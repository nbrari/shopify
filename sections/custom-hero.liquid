{% schema %}
{
  "name": "Custom Hero",
  "tag": "section",
  "class": "custom-hero-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "hero_alt",
      "label": "Image alt text",
      "default": "Hero banner"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}

<section class="custom-hero-section">
  <div class="hero-slider">
    <div class="slider-track">
      <div class="hero-slide active">
        <a href="/collections/all">
          <img src="https://cdn.shopify.com/s/files/1/0640/8378/7881/files/hero-img.png?v=1753229893" alt="Vanilla Cheesecakes">
        </a>
      </div>
      <div class="hero-slide">
        <a href="/collections/all">
          <img src="https://cdn.shopify.com/s/files/1/0640/8378/7881/files/hero-img.png?v=1753229893" alt="Vanilla Cheesecakes">
        </a>
      </div>
      <div class="hero-slide">
        <a href="/collections/all">
          <img src="https://cdn.shopify.com/s/files/1/0640/8378/7881/files/hero-img.png?v=1753229893" alt="Vanilla Cheesecakes">
        </a>
      </div>
    </div>
    <!-- Overlay -->
    <div class="slider-overlay">
      <div class="vector-wrapper">
        <img class="slider-vector" src="https://cdn.shopify.com/s/files/1/0640/8378/7881/files/Vector.png?v=1753356718" alt="Vector decoration">
        <div class="slider-dots">
          <span class="dot active" data-slide="0"></span>
          <span class="dot" data-slide="1"></span>
          <span class="dot" data-slide="2"></span>
        </div>
      </div>
    </div>
  </div>
</section>